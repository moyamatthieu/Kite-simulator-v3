{
  "compilerOptions": {
    /* Vite + TypeScript Configuration Standard */
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    
    /* Module Resolution */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    
    /* Type Checking */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    
    /* Interop */
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    
    /* Paths */
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@types": ["src/types/index.ts"],
      
      // Core architecture - SOLID principles
      "@core/*": ["src/core/*"],
      "@abstractions/*": ["src/abstractions/*"],
      "@base/*": ["src/base/*"],
      
      // New modular simulation architecture
      "@simulation/core/*": ["src/simulation/core/*"],
      "@simulation/legacy/*": ["src/simulation/simu_V10/*"],
      "@simulation/*": ["src/simulation/*"],
      
      // Unified factory system
      "@factories/unified/*": ["src/factories/unified/*"],
      "@factories/legacy/*": ["src/factories/*"],
      "@factories/*": ["src/factories/*"],
      
      // Objects and rendering
      "@objects/*": ["src/objects/*"],
      "@renderer/*": ["src/renderer/*"],
      "@3d/*": ["src/core/abstractions/I3DRenderer", "src/core/implementations/Three3DRenderer"],
      
      // Utilities and exports
      "@export/*": ["src/export/*"],
      "@ui/*": ["src/ui/*"],
      "@utils/*": ["src/utils/*"],
      
      // Legacy paths for backward compatibility
      "@simulation/simu_V10/*": ["src/simulation/simu_V10/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
